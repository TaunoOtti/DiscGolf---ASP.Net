@model Web.Areas.Admin.ViewModels.TracksIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>@Resources.Domain.Tracks</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tracks.FirstOrDefault().TrackName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tracks.FirstOrDefault().TrackLocation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Tracks) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TrackName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrackLocation)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.TrackId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.TrackId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.TrackId })
        </td>
    </tr>
}

</table>

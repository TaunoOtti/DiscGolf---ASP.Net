@model Web.Areas.Admin.ViewModels.ScoresIndexViewModel

@{
    ViewBag.Title = @Resources.Domain.Score;
}

<h2>@Resources.Domain.Score</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "ChooseGame")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Scores.FirstOrDefault().PlayerInGame.Game.Track.TrackName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scores.FirstOrDefault().PlayerInGame.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scores.FirstOrDefault().PlayerInGame.GameId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scores.FirstOrDefault().Basket.BasketNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scores.FirstOrDefault().Throws)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scores.FirstOrDefault().ThrowStyle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scores.FirstOrDefault().Comment)
        </th>
      
       
       

        <th></th>
    </tr>

@foreach (var item in Model.Scores) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerInGame.Game.Track.TrackName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerInGame.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerInGame.Game.GameName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Basket.BasketNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Throws)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThrowStyle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
      
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.ScoreId}) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.ScoreId}) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.ScoreId})
        </td>
    </tr>
}

</table>

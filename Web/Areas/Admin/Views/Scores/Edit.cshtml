@model Web.Areas.Admin.ViewModels.ScoreCreateEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Score</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
        @Html.HiddenFor(model => model.Score.ScoreId)
        @Html.HiddenFor(model => model.GameId)

        @Html.Partial("_CreateEdit", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value= @Resources.Common.Save class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Resources.Common.BackToList, "Index")
</div>

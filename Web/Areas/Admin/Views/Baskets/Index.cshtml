@model Web.Areas.Admin.ViewModels.BasketsIndexViewModels

@{
    ViewBag.Title = @Resources.Domain.Basket;
}

<h2>@Resources.Domain.Basket</h2>

<p>
    @Html.ActionLink(@Resources.Common.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Basket.Track.TrackName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Basket.BasketNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Basket.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Basket.Pars)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Basket.Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Baskets) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Track.TrackName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasketNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pars)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink(@Resources.Common.Edit, "Edit", new { id=item.BasketId }) |
            @Html.ActionLink(@Resources.Common.Details, "Details", new { id=item.BasketId }) |
            @Html.ActionLink(@Resources.Common.Delete, "Delete", new { id=item.BasketId })
        </td>
    </tr>
}

</table>

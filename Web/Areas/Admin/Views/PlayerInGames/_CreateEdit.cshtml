@model Web.Areas.Admin.ViewModels.PlayerInGamesViewModel

<div class="form-group">
    @Html.LabelFor(model => model.PlayerInGame.GameId, @Resources.Domain.GameId, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.PlayerInGame.GameId, Model.GameSelectList, @Resources.Common.SelectOptionLabel, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PlayerInGame.GameId, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.PlayerInGame.UserId, @Resources.Domain.Username, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.PlayerInGame.UserId, Model.UserSelectList, @Resources.Common.SelectOptionLabel, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PlayerInGame.UserId, "", new { @class = "text-danger" })
    </div>
</div>
